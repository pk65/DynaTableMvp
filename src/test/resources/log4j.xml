<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "http://jakarta.apache.org/log4j.dtd">
<log4j:configuration debug="true"
	xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss} %5p %c{10} - %m%n" />
		</layout>
	</appender>

	<appender name="fileAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="append" value="false" />
		<param name="file" value="logs/DynaTableMvp_test.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c{1}] %m%n" />
		</layout>
	</appender>
	<logger name="org.hibernate">
		<level value="WARN" />
		<appender-ref ref="fileAppender" />
	</logger>
	<logger name="org.eclipse">
		<level value="WARN" />
		<appender-ref ref="fileAppender" />
	</logger>
	<logger name="org.springframework">
		<level value="WARN" />
		<appender-ref ref="fileAppender" />
	</logger>
	<logger name="com.google.gwt.sample.dynatablemvp">
		<level value="WARN" />
		<appender-ref ref="fileAppender" />
	</logger>

	<root>
		<level value="WARN" />
		<appender-ref ref="fileAppender" />
	</root>

</log4j:configuration>